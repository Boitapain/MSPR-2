{
    "name": "Disease Tracker Dev",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "notebook",
    "workspaceFolder": "/app",
    "forwardPorts": [
        8888,
        8501,
        5001,
        8080
    ],
    "postCreateCommand": "echo 'Devcontainer ready âœ…'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", // Python core extension
                "ms-python.vscode-pylance", // Fast, feature-rich Python analysis
                "ms-toolsai.jupyter", // For Jupyter Notebooks
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-python.debugpy", // Python debugger
                "ms-azuretools.vscode-docker", // Dockerfile + docker-compose support
                "ms-azuretools.vscode-containers", // UI for containers (optional but helpful)
                "redhat.vscode-yaml", // YAML syntax (useful for docker-compose)
                "mechatroner.rainbow-csv", // CSV viewer (for `data_etl_output.csv`)
                "github.vscode-github-actions", // If you use GitHub Actions
                "oderwat.indent-rainbow" // Optional: highlights indent levels
            ]
        }
    },
    "remoteEnv": {
        "PYTHONPATH": "/app"
    }
}